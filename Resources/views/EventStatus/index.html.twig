{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'EventStatus'}, 'EventStatus') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerCoreBundle:Default:admin_nav.html.twig") }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            {{ '%entity% list'|trans({'%entity%': 'EventStatus'}, 'EventStatus') }}
        </h1>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools pull-right">
                    <a class="btn btn-link  btn-sm" href={{ path('eventstatus_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'EventStatus'}, 'EventStatus') }}
                    </a>
                            </div>
            </div>
            <div class="box-body">    
            <table class="table table-hover records_list table-condensed">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">{{ 'Actions'|trans({}, 'EventStatus') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for eventstatus in paginator %}
                        <tr>
                            <td><a href="{{ path('eventstatus_show', {id: eventstatus.id}) }}">{{ eventstatus.id }}</a></td>
                            <td><a href="{{ path('eventstatus_show', {id: eventstatus.id}) }}">{{ eventstatus.name }}</a></td>
                            <td>{{ eventstatus.description }}</td>
                            <td>
                        <div class="btn-group">
                            <a class="btn btn-link  btn-sm" href="{{ path('eventstatus_show', {id: eventstatus.id}) }}">
                                {{ 'show'|trans({}, 'EventStatus') }}
                            </a>
                            <a class="btn btn-link  btn-sm" href="{{ path('eventstatus_edit', {id: eventstatus.id}) }}">
                                 {{ 'edit'|trans({}, 'EventStatus') }}
                            </a>
                        </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            {{ knp_pagination_render(paginator) }}
            </div>
        <div class="box-footer">

        </div>
        
    </section>        

{% endblock %}
