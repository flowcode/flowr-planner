{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}EventStatus - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            <a href="{{ path('eventstatus') }}"> {{ '%entity% list'|trans({'%entity%': 'EventStatus'}, 'EventStatus') }}</a>
            /
            {{ 'EventStatus' | trans({}, 'EventStatus')}}
        </h1>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">

                        <a class="btn btn-link  btn-sm" href="{{ path('eventstatus_edit', {id: eventstatus.id}) }}">
                            {{ 'Edit'|trans({}, 'EventStatus') }}
                        </a>
                        <button class="btn btn-link  btn-sm" type="submit">{{ 'Delete'|trans({}, 'EventStatus') }}</button>

                    </div>

                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                    <div id="delete_confirm" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h3>{{ 'Confirm delete'|trans({}, 'EventStatus') }}</h3>
                                </div>
                                <div class="modal-body">
                                    <p>{{ 'You are about to delete an item'|trans({}, 'EventStatus') }}, {{ 'this procedure is irreversible'|trans({}, 'EventStatus') }}.</p>
                                    <p>{{ 'Do you want to proceed?'|trans({}, 'EventStatus') }}</p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'EventStatus') }}</button>
                                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'EventStatus') }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'EventStatus')}}</th>
                            <td>{{ eventstatus.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Name'|trans({}, 'EventStatus')}}</th>
                            <td>{{ eventstatus.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Description'|trans({}, 'EventStatus')}}</th>
                            <td>{{ eventstatus.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

</div>
        </div>
    
    </section>

{% endblock %}
